<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E2F0D9"
    tools:context=".ContentsTypeChoiceActivity">

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shapering"
        android:id="@+id/photo_type"
        android:layout_margin="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/draw_type"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintHorizontal_bias="0.1"
        />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shapering"
        android:id="@+id/draw_type"
        android:layout_margin="2dp"
        app:layout_constraintTop_toBottomOf="@+id/photo_type"
        app:layout_constraintBottom_toTopOf="@+id/nanuli_type"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.5"

        app:layout_constraintHorizontal_bias="0.9"
        />

    <ImageButton
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/shapering"
        android:id="@+id/nanuli_type"
        android:layout_margin="2dp"
        app:layout_constraintTop_toBottomOf="@+id/draw_type"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintWidth_percent="0.5"
        app:layout_constraintHorizontal_bias="0.1"
        />


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/photo_type_icon"
        android:background="@drawable/draw_type"
        app:layout_constraintTop_toTopOf="@+id/photo_type"
        app:layout_constraintBottom_toTopOf="@+id/photo_type_text"
        app:layout_constraintLeft_toLeftOf="@+id/photo_type"
        app:layout_constraintRight_toRightOf="@+id/photo_type"
        app:layout_constraintVertical_bias="0.3"
        app:layout_constraintWidth_percent="0.27"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintVertical_chainStyle="packed"

        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/photo_type_text"
        android:text="사진 나누리"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/photo_type_icon"
        app:layout_constraintBottom_toBottomOf="@+id/photo_type"
        app:layout_constraintLeft_toLeftOf="@+id/photo_type"
        app:layout_constraintRight_toRightOf="@+id/photo_type"
    />


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/draw_type_icon"
        android:background="@drawable/drawicon"
        app:layout_constraintTop_toTopOf="@+id/draw_type"
        app:layout_constraintBottom_toTopOf="@+id/draw_type_text"
        app:layout_constraintLeft_toLeftOf="@+id/draw_type"
        app:layout_constraintRight_toRightOf="@+id/draw_type"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintWidth_percent="0.27"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintVertical_chainStyle="packed"

        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/draw_type_text"
        android:text="그림 나누리"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/draw_type_icon"
        app:layout_constraintBottom_toBottomOf="@+id/draw_type"
        app:layout_constraintLeft_toLeftOf="@+id/draw_type"
        app:layout_constraintRight_toRightOf="@+id/draw_type"
        />


    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/nanuli_type_icon"
        android:background="@drawable/nanuliicon"
        app:layout_constraintTop_toTopOf="@+id/nanuli_type"
        app:layout_constraintBottom_toTopOf="@+id/nanuli_type_text"
        app:layout_constraintLeft_toLeftOf="@+id/nanuli_type"
        app:layout_constraintRight_toRightOf="@+id/nanuli_type"
        app:layout_constraintVertical_bias="0.4"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_percent="0.27"
        app:layout_constraintDimensionRatio="1:1"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/nanuli_type_text"
        android:text="글 나누리"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:gravity="center_horizontal"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toBottomOf="@+id/nanuli_type_icon"
        app:layout_constraintBottom_toBottomOf="@+id/nanuli_type"
        app:layout_constraintLeft_toLeftOf="@+id/nanuli_type"
        app:layout_constraintRight_toRightOf="@+id/nanuli_type"
        />

</androidx.constraintlayout.widget.ConstraintLayout>